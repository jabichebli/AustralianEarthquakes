{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "width": 800,
  "height": 400,
  "title": {
    "text": "Earthquakes in Australia between 2008 to 2024",
    "anchor": "middle",
    "fontSize": 16,
    "font": "Open Sans, sans-serif"
  },
  "projection": {"type": "mercator", "center": [135, -25], "scale": 500},
  "params": [
    {
      "name": "minMagnitude",
      "value": 4.0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 6.4,
        "step": 0.1,
        "name": "Minimum Magnitude "
      }
    },
    {
      "name": "maxMagnitude",
      "value": 6.4,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 6.4,
        "step": 0.1,
        "name": "Maximum Magnitude "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/refs/heads/main/week9_homework/json/australia.json",
        "format": {"type": "topojson", "feature": "australia"}
      },
      "mark": {"type": "geoshape", "fill": "#FFE4B5", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/main/week9_homework/data/earthquakes_data_cleaned.csv"
      },
      "transform": [
        {
          "calculate": "datum.depth < 5 ? '0-5' : datum.depth < 10 ? '5-10' : datum.depth < 15 ? '10-15' : '15+'",
          "as": "depth_category"
        },
        {
          "filter": "datum.mla >= minMagnitude && datum.mla <= maxMagnitude"
        }
      ],
      "mark": {"type": "circle", "tooltip": true},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "mla",
          "type": "quantitative",
          "title": "Magnitude (Richter scale)",
          "scale": {
            "domain": {"param": "minMagnitude"},
            "range": [0, 350]
          }
        },
        "color": {
          "field": "depth_category",
          "type": "ordinal",
          "title": "Depth (km)",
          "scale": {
            "domain": ["0-5", "5-10", "10-15", "15+"],
            "range": ["#C2A98D", "#9B6D58", "#7B4B3A", "#5e3717"]
          }
        },
        "tooltip": [
          {
            "field": "mla",
            "title": "Magnitude (Richter scale)",
            "format": ".2f"
          },
          {"field": "description", "title": "Description"},
          {
            "field": "event_creation_time",
            "title": "Date and Time",
            "type": "temporal",
            "format": "%d-%b-%Y %H:%M"
          },
          {"field": "depth", "title": "Depth (km)"}
        ]
      }
    },
    {
      "data": {
        "values": [{}]
      },
      "mark": {
        "type": "image",
        "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/main/Visualisation2/img/australia_world_map.png",
        "x": 830,
        "y": 250,
        "width": 175,
        "height": 400
      }
    },
        {
      "data": {
        "values": [{}]
      },
      "mark": {
        "type": "image",
        "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/main/Visualisation2/img/hover_over_flipped.png",
        "x": 620,
        "y": 90,
        "width": 100,
        "height": 100
      }
    },
    {
      "data": {
        "values": [{}]
      },
      "mark": {
        "type": "text",
        "fontSize": 11.5,
        "fontStyle": "italic",
        "font": "Open Sans, sans-serif",
        "dx": -200,
        "dy": 300
      },
      "encoding": {
        "x": {"value": 400},
        "y": {"value": 50},
        "text": {"value": "Southern states are more susceptible to earthquakes."},
        "fill": {"value": "gray"}
      }
    },
    {
      "data": {
        "values": [{}]
      },
      "mark": {
        "type": "text",
        "fontSize": 11.5,
        "fontStyle": "italic",
        "font": "Open Sans, sans-serif",
        "dx": -310,
        "dy": 10
      },
      "encoding": {
        "x": {"value": 400},
