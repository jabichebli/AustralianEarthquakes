{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/refs/heads/main/week10_homework/data/earthquakes_data_choropleth_data.csv",
    "format": {
      "type": "csv"
    }
  },
  "title": {
    "text": "Earthquake Frequency Comparison",
    "fontSize": 16,
    "anchor": "middle",
    "align": "center",
    "font": "Open Sans, sans-serif"
  },
  "spacing": 0,
  "hconcat": [
    {
      "title": {
        "text": "Western Australia",
        "fontSize": 14,
        "color": "#804413"
      },
      "transform": [
        {
          "filter": {
            "field": "STATE_NAME",
            "equal": "Western Australia"
          }
        }
      ],
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "year",
              "axis": null,
              "sort": "descending"
            },
            "x": {
              "field": "num_earthquakes_per_area",
              "type": "quantitative",
              "title": "Number of Earthquakes per 100,000 km²",
              "axis": { "format": "d" },
              "sort": "descending",
              "scale": {
                "domain": [0, 90]
              }
            },
            "color": {
              "value": "#804413"
            },
            "tooltip": [
              { "field": "STATE_NAME", "type": "nominal", "title": "State" },
              { "field": "year", "type": "ordinal", "title": "Year" },
              { "field": "num_earthquakes_per_area", "type": "quantitative", "title": "Number of Earthquakes per 100,000 km²", "format": ".2f" }
            ]
          }
        },
        {
          "transform": [
            {
              "calculate": "'WA experienced its; second largest number; of earthquakes in 2018.'",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": -80,
            "dy": 25,
            "fontSize": 12,
            "font": "Open Sans, sans-serif",
            "fontStyle": "italic",
            "fontWeight": "normal"
          },
          "encoding": {
            "text": {
              "field": "text_annotation",
              "type": "nominal"
            },
            "color": {
              "value": "gray"
            },
            "y": {
              "value": 40
            }
          }
        },
        {
          "transform": [
            {
              "calculate": "'In 2015 WA experienced; its lowest number; of earthquakes.'",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": -80,
            "dy": 145,
            "fontSize": 12,
            "font": "Open Sans, sans-serif",
            "fontStyle": "italic",
            "fontWeight": "normal"
          },
          "encoding": {
            "text": {
              "field": "text_annotation",
              "type": "nominal"
            },
            "color": {
              "value": "gray"
            },
            "y": {
              "value": 40
            }
          }
        }
      ]
    },
    {
      "width": 20,
      "view": { "stroke": null },
      "mark": {
        "type": "text",
        "align": "center",
        "font": "Open Sans, sans-serif"
      },
      "encoding": {
        "y": {
          "field": "year",
          "type": "ordinal",
          "axis": null,
          "sort": "descending"
        },
        "text": {
          "field": "year",
          "type": "ordinal"
        }
      }
    },
    {
      "title": {
        "text": "Victoria",
        "fontSize": 14,
        "color": "#0072B2"
      },
      "transform": [
        {
          "filter": {
            "field": "STATE_NAME",
            "equal": "Victoria"
          }
        }
      ],
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "year",
              "axis": null,
              "sort": "descending"
            },
            "x": {
              "field": "num_earthquakes_per_area",
              "type": "quantitative",
              "title": "Number of Earthquakes per 100,000 km²",
              "axis": { "format": "d" },
              "scale": {
                "domain": [0, 90]
              }
            },
            "color": {
              "value": "#0072B2"
            },
            "tooltip": [
              { "field": "STATE_NAME", "type": "nominal", "title": "State" },
              { "field": "year", "type": "ordinal", "title": "Year" },
              { "field": "num_earthquakes_per_area", "type": "quantitative", "title": "Number of Earthquakes per 100,000 km²", "format": ".2f" }
            ]
          }
        },
        {
          "transform": [
            {
              "calculate": "'VIC experienced its; second largest number; of earthquakes in 2021.'",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": -50,
            "dy": 55,
            "fontSize": 12,
            "font": "Open Sans, sans-serif",
            "fontStyle": "italic",
            "fontWeight": "normal"
          },
          "encoding": {
            "text": {
              "field": "text_annotation",
              "type": "nominal"
            },
            "color": {
              "value": "gray"
            },
            "y": {
              "value": 40
            }
          }
        },
        {
          "transform": [
            {
              "calculate": "'In 2008 VIC had 1.5x; more earthquakes than; WA.'",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": -30,
            "dy": 220,
            "fontSize": 11.5,
            "font": "Open Sans, sans-serif",
            "fontStyle": "italic",
            "fontWeight": "normal"
          },
          "encoding": {
            "text": {
              "field": "text_annotation",
              "type": "nominal"
            },
            "color": {
              "value": "gray"
            },
            "y": {
              "value": 40
            }
          }
        }
      ]
    }
  ],
  "config": {
    "view": { "stroke": null },
    "axis": { "grid": false, "labelFont": "Open Sans, sans-serif", "titleFont": "Open Sans, sans-serif" },
    "legend": { "labelFont": "Open Sans, sans-serif", "titleFont": "Open Sans, sans-serif" }
  }
}
