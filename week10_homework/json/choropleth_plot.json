{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": {
      "text": "Earthquakes in Each State of Australia 2024",
      "anchor": "middle",
      "fontSize": 20,
      "fontWeight": "bold"
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/refs/heads/main/week10_homework/json/states_australia.topojson",
          "format": {
            "type": "topojson",
            "feature": "states"
          }
        },
        "mark": {
          "type": "geoshape",
          "stroke": "white"
        },
        "transform": [
          {
            "lookup": "properties.STATE_NAME", 
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/refs/heads/main/week10_homework/data/earthquakes_data_choropleth_plot.csv",
                "format": {
                  "type": "csv"
                }
              },
              "key": "STATE_NAME",  
              "fields": ["num_earthquakes_per_area"]  
            }
          }
        ],
        "encoding": {
          "color": {
            "field": "num_earthquakes_per_area",  
            "type": "quantitative",
            "scale": {
              "domain": [0, 20],  
              "range": ["lightblue", "darkblue"]
            },
            "legend": {
              "title": "Earthquakes per 100,000 km²"
            }
          },
          "tooltip": [
            {
              "field": "properties.STATE_NAME",
              "title": "State"
            },
            {
              "field": "num_earthquakes_per_area",
              "title": "Number of Earthquakes per 100,000 km²",
              "format": ".2f"
            }
          ]
        }
      }
    ],
    "projection": {
      "type": "mercator"
    }
  }
  