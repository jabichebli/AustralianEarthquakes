{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Magnitude 4-9 Earthquakes in Australia between 2000 to 2024",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/main/week9_homework/json/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jabichebli/FIT3179/main/week9_homework/data/earthquakes_data_cleaned.csv"
      },
      "transform": [
        {
          "calculate": "datum.depth < 5 ? '0-5' : datum.depth < 10 ? '5-10' : datum.depth < 15 ? '10-15' : '15+'",
          "as": "depth_category"
        }
      ],
      "mark": {
        "type": "circle",
        "tooltip": true
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "mla",
          "type": "quantitative",
          "title": "Magnitude (Richter scale)",
          "scale": {"domain": [4, 9]}
        },
        "color": {
          "field": "depth_category",
          "type": "ordinal",
          "title": "Depth Category",
          "scale": {
            "domain": ["0-5", "5-10", "10-15", "15+"],
            "range": ["#ffcccc", "#ff9999", "#ff6666", "#ff3333"]
          }
        },
        "tooltip": [
          {
            "field": "mla",
            "title": "Magnitude (Richter scale)",
            "format": ".2f"
          },
          {"field": "description", "title": "Description"},
          {
            "field": "event_creation_time",
            "title": "Date and Time",
            "type": "temporal",
            "format": "%d-%b-%Y %H:%M"
          },
          {"field": "depth", "title": "Depth (km)"}
        ]
      }
    }
  ]
}
